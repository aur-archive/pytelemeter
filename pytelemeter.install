post_install () {
  # Alert the user to create a ~/.pytelemeterrc
  echo ">>> This program will not run without a configuration"
  echo ">>> file. You'll find a sample configuration file in"
  echo ">>> /usr/share/pytelemeter/. Copy it to ~/.pytelemeterrc"
  echo ">>> and make sure it is readable by your user only."
}

op=$1
shift

$op $*
